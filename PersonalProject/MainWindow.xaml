<Window x:Class="PersonalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Margin="20" FontSize="20">Select A CryptoCurrency To View Data</TextBlock>
            <Button x:Name="loadBitcoinInfo" Margin="10" Click="loadBitcoinInfo_Click">Bitcoin</Button>
            <Button x:Name="loadEthereuminfo" Margin="10" Click="loadEthereuminfo_Click">Ethereum</Button>
            <Button x:Name="loadXRPinfo" Margin="10" Click="loadXRPinfo_Click">XRP</Button>
            <Button x:Name="loadCardanoinfo" Margin="10" Click="loadCardanoinfo_Click">Cardano</Button>
            <TextBlock x:Name="cryptoText" Margin="20"/>
            
        </StackPanel>


    </Grid>
</Window>
